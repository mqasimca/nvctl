{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit.sh"
          }
        ]
      }
    ]
  },
  "agents": {
    "preferred": [
      "code-reviewer",
      "type-design-analyzer",
      "code-simplifier"
    ]
  },
  "rules": {
    "gui": {
      "framework": "iced",
      "architecture": "elm",
      "no_unwrap": true,
      "require_cache": true
    },
    "lib": {
      "no_unwrap": true,
      "require_tests": true,
      "use_traits": true
    }
  },
  "skills": {
    "check": ".claude/skills/check.md",
    "build": ".claude/skills/build.md",
    "gui": ".claude/skills/gui.md"
  }
}
